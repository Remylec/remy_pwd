{% extends 'layouts/bootstrap-base.html.twig' %}

{% block content %}

    <!-- ================ start banner area ================= -->
    <section class="blog-banner-area" id="category">
        <div class="container h-100">
            <div class="blog-banner">
                <div class="text-center">
                    <h1>Inscription</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                        <ol class="breadcrumb">

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ end banner area ================= -->

    <!--================Login Box Area =================-->
    <section class="login_box_area section-margin">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_box_img">
                        <div class="hover">
                            <h4>Déjà inscrit ?</h4>
                            <p>Cliquez sur le bouton ci-dessous pour vous connecter à votre compte existant.</p>
                            <a class="button button-account" href="{{ path('app_login') }}">Connectez-vous maintenant</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner register_form_inner">
                        <h3>Créer un compte</h3>
                        {{ form_start(registerForm,{'attr':{'class':'row login_form'}}) }}
                        <div class="col-md-12 form-group">
                            {{ form_widget(registerForm.email,{'attr':{'class':'form-control borderform','placeholder':'email'}}) }}
                        </div>
                        <div class="col-md-12 form-group">
                            {{ form_widget(registerForm.pseudo,{'attr':{'class':'form-control borderform','placeholder':'pseudo'}}) }}
                        </div>
                        <div class="col-md-12 form-group">
                            {{ form_widget(registerForm.password.first,{'attr':{'class':'form-control borderform','placeholder':'mot de passe'}}) }}
                            {{ form_widget(registerForm.password.second,{'attr':{'class':'form-control borderform','placeholder':'confirmer mot de passe'}}) }}

                        </div>
                        <div class="col-md-12 form-group">
                            {{ form_widget(registerForm.button,{'attr':{'class':'button button-register w-100'}}) }}
                        </div>
                        {{ form_end(registerForm) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Login Box Area =================-->

{% endblock %}
