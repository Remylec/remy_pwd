{% extends 'layouts/bootstrap-base.html.twig' %}


{% block content %}

    <!-- ================ start banner area ================= -->
    <section class="blog-banner-area" id="contact">
        <div class="container h-100">
            <div class="blog-banner">
                <div class="text-center">
                    <h1>Contactez-nous</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ end banner area ================= -->

    <!-- ================ contact section start ================= -->
    <section class="section-margin--small">
        <div class="container">

            <div class="row">
                <div class="col-md-8 col-lg-9">
                    {{ form_start(formAdvert) }}
                    <form action="#/" class="form-contact contact_form" action="contact_process.php" method="post"
                          id="contactForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    {{ form_widget(formAdvert.title,{'placeholder':'titre','attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label>Liste Raquettes</label>
                                    {{ form_widget(formAdvert.product,{'attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(formAdvert.price,{'placeholder':'prix','attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="subject" id="subject" type="text" placeholder="Sujet">
                                    {{ form_widget(formAdvert.imageFile,{'placeholder':'ajouter image','attr':{'class':'form-control'}}) }}


                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <textarea class="form-control different-control w-100" name="message" id="message" cols="30" rows="5" placeholder="Votre Message"></textarea>
                                    {{ form_widget(formAdvert.description,{'placeholder':'description','attr':{'class':'form-control different-control w-100'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center text-md-right mt-3">
                            <button type="submit" class="button button--active button-contactForm">Envoyer Message
                            </button>
                            {{ form_widget(advertForm.button,{'attr':{'class':'button button--active button-contactForm'}}) }}
                        </div>
                        {{ form_end(formAdvert) }}

                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ contact section end ================= -->

{% endblock %}
